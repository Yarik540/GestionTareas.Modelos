@model GestionTareas.Modelos.Auth.Register
@{
    ViewData["Title"] = "Registro de Usuario";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Tareas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth.css" />
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h3>Gestión de Tareas</h3>
                        <p style="color:white">Crear Nueva Cuenta</p>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.Error
                            </div>
                        }

                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">
                                @ViewBag.Success
                            </div>
                        }

                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre Completo</label>
                                <input asp-for="Nombre" type="text" class="form-control" required maxlength="100">
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" required maxlength="150">
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control" required minlength="4">
                                <small class="form-text text-muted">Mínimo 4 caracteres</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required minlength="4">
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary">Registrarse</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">
                            ¿Ya tienes cuenta?
                            <a asp-action="Login" class="text-decoration-none">Iniciar Sesión</a>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>