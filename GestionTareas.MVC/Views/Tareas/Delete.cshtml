@model GestionTareas.Modelos.Tarea
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="container mt-4">
    <h2>Eliminar Tarea</h2>

    <div class="alert alert-warning">
        <strong>¿Está seguro que desea eliminar esta tarea?</strong>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5>@Model.Titulo</h5>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>
            <p>
                <strong>Estado:</strong>
                <span class="badge
                    @(Model.Estado == "Completada" ? "bg-success" :
                      Model.Estado == "En Progreso" ? "bg-warning" : "bg-secondary")">
                    @Model.Estado
                </span>
            </p>
            <p>
                <strong>Prioridad:</strong>
                <span class="badge
                    @(Model.Prioridad == "Alta" ? "bg-danger" :
                      Model.Prioridad == "Media" ? "bg-warning" : "bg-info")">
                    @Model.Prioridad
                </span>
            </p>
            <p><strong>Proyecto:</strong> #@Model.ProyectoId</p>
            <p><strong>Fecha de Vencimiento:</strong> @(Model.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "Sin fecha")</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>