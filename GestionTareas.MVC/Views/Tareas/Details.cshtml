@model GestionTareas.Modelos.Tarea
@{
    ViewData["Title"] = "Detalles de la Tarea";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Model.Titulo</h2>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <p><strong>Descripción:</strong></p>
                    <p>@Model.Descripcion</p>

                    <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                    <p><strong>Fecha de Vencimiento:</strong> @(Model.FechaVencimiento?.ToString("dd/MM/yyyy") ?? "Sin fecha")</p>
                </div>
                <div class="col-md-4">
                    <p>
                        <strong>Estado:</strong>
                        <span class="badge
                            @(Model.Estado == "Completada" ? "bg-success" :
                              Model.Estado == "En Progreso" ? "bg-warning" : "bg-secondary")">
                            @Model.Estado
                        </span>
                    </p>
                    <p>
                        <strong>Prioridad:</strong>
                        <span class="badge
                            @(Model.Prioridad == "Alta" ? "bg-danger" :
                              Model.Prioridad == "Media" ? "bg-warning" : "bg-info")">
                            @Model.Prioridad
                        </span>
                    </p>
                    <p><strong>Proyecto:</strong> #@Model.ProyectoId</p>
                    <p><strong>Usuario Asignado:</strong> @(Model.UsuarioAsignadoId?.ToString() ?? "Sin asignar")</p>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Eliminar</a>
            </div>
        </div>
    </div>
</div>