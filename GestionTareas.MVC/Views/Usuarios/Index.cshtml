@model IEnumerable<GestionTareas.Modelos.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Usuarios</h2>
        <a asp-action="Create" class="btn btn-primary">Nuevo Usuario</a>
    </div>

    <div class="row">
        @foreach (var usuario in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@usuario.Nombre</h5>
                        <p class="card-text">@usuario.Email</p>
                        <small class="text-muted">Registrado: @usuario.FechaCreacion.ToString("dd/MM/yyyy")</small>
                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-info btn-sm">Ver</a>
                            <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
