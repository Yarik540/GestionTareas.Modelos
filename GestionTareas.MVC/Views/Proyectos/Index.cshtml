@model IEnumerable<GestionTareas.Modelos.Proyecto>
@{
    ViewData["Title"] = "Lista de Proyectos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Proyectos</h2>
        <a asp-action="Create" class="btn btn-primary">Nuevo Proyecto</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Fecha Creación</th>
                        <th>Usuario Creador</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var proyecto in Model)
                    {
                        <tr>
                            <td><strong>@proyecto.Nombre</strong></td>
                            <td>@proyecto.Descripcion</td>
                            <td>@proyecto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>Usuario #@proyecto.UsuarioCreadorId</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@proyecto.Id" class="btn btn-sm btn-info">Ver</a>
                                <a asp-action="Edit" asp-route-id="@proyecto.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@proyecto.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h5>No hay proyectos disponibles</h5>
            <p>Crea tu primer proyecto haciendo click en "Nuevo Proyecto"</p>
        </div>
    }
</div>
