@model GestionTareas.Modelos.Proyecto
@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<div class="container mt-4">
    <h2>Eliminar Proyecto</h2>

    <div class="alert alert-warning">
        <strong>¿Está seguro que desea eliminar este proyecto?</strong>
        <p>Esta acción no se puede deshacer y eliminará todas las tareas asociadas.</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5>@Model.Nombre</h5>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>
            <p><strong>Fecha de Creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
            <p><strong>Usuario Creador:</strong> #@Model.UsuarioCreadorId</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Sí, Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>